@model IEnumerable<TuLista.Models.ArticulosConTipo>

<p>Pulsar en la cruz roja para marcar como comprado</p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Artículo</th>
        <th>Tipo</th>
        <th>Estado</th>
    </tr>
    @foreach(var a in Model)
    {
        <tr>
            <td>@a.IdArticulo</td>
            <td>@a.nombreArticulo</td>
            <td>@a.nombreTipo</td>
            @{ 
                if (a.comprado == true)
                {
                    <td><img src="~/Imagenes/mcol_tick.png" width="30px" height="30px" /></td>
                }
                else
                {
                    <td><a href="/Listas/MarcarArticuloComoComprado?idArticulo=@a.IdArticulo"><img src="~/Imagenes/mcol_cross.png" width="30px" height="30px" /></a></td>
                }
            }
        </tr>
    }
</table>
